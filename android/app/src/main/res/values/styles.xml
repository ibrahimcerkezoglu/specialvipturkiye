<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Normal Flutter Teması -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@color/black</item>
    </style>

    <!-- Splash Ekranı Teması -->
    <style name="Theme.SpecialVIPTurkiye.Splash" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_image</item>
        <item name="android:windowSplashScreenAnimationDuration">300</item>
        <!-- Fade out duration satırını kaldırdık -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
</resources>
